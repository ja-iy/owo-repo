{
    "name": "@repo/ts-env",
    "private": true,
    "type": "module",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "build": "tsup",
        "build:packages": "tsup",
        "dev": "tsup --watch",
        "lint": "eslint . --ext .ts",
        "typecheck": "tsc --noEmit",
        "build:types": "tsc -p . --emitDeclarationOnly --declaration --noEmit false"
    },
    "exports": {
        "./core": {
            "types": "./dist/src/core/index.d.ts",
            "import": "./dist/src/core/index.js",
            "require": "./dist/src/core/index.cjs"
        },
        "./next": {
            "types": "./dist/src/next/index.d.ts",
            "import": "./dist/src/next/index.js",
            "require": "./dist/src/next/index.cjs"
        },
        "./next-init/@server": {
            "types": "./dist/src/next/init/@server/index.d.ts",
            "import": "./src/next/init/@server/index.tsx",
            "require": "./src/next/init/@server/index.tsx"
        },
        "./next-init/@client": {
            "types": "./src/next/init/@client/index.tsx",
            "import": "./src/next/init/@client/index.tsx",
            "require": "./src/next/init/@client/index.tsx"
        }
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "typescript": "^5.4.5",
        "zod": "^3.22.4"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "typescript": "^5.4.5",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/prettier-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@repo/tsup-config": "workspace:*",
        "@types/node": "^20.12.7",
        "@types/react": "^18.2.77",
        "@types/react-dom": "^18.2.25",
        "dotenv-cli": "^7.4.1",
        "eslint": "^8.56.0",
        "tsup": "^8.0.2"
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "@repo/eslint-config/library"
        ]
    },
    "files": [
        "dist",
        "package.json",
        "LICENSE",
        "README.md"
    ],
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        }
    },
    "prettier": "@repo/prettier-config"
}
