{
    "name": "repo",
    "private": true,
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "postinstall": "tsx node_modules/@repo/scripts/src/postinstall.ts",
        "init-repo": "pnpm --ignore-scripts install && turbo build:packages && pnpm install && tsx node_modules/@repo/scripts/dist/src/init-repo.js",
        "create-env": "tsx node_modules/@repo/scripts/dist/src/init-repo.js",
        "build": "turbo build",
        "build:types": "turbo build:types",
        "build:libs": "turbo build:libs",
        "build:packages": "turbo build:packages",
        "build:tooling": "turbo build:tooling",
        "build:debug": "turbo build:debug",
        "legacy:dev": "turbo dev --parallel",
        "legacy:dev:libs": "turbo dev:libs --parallel",
        "legacy:dev:packages": "turbo dev:packages --parallel",
        "legacy:dev:tooling": "turbo dev:tooling --parallel",
        "legacy:dev:debug": "turbo dev:debug --parallel",
        "clean": "git clean -xdf node_modules",
        "clean:workspaces": "turbo clean",
        "format:prettier:entire-repo": "turbo format:prettier --continue -- --cache --cache-location='node_modules/.cache/.prettiercache'",
        "format:prettier:entire-repo:fix": "turbo format:prettier:fix --continue -- --write --cache --cache-location='node_modules/.cache/.prettiercache'",
        "lint": "turbo lint --continue -- --cache --cache-location 'node_modules/.cache/.eslintcache'",
        "lint:fix": "turbo lint --continue -- --fix --cache --cache-location 'node_modules/.cache/.eslintcache'",
        "typecheck": "turbo typecheck",
        "deps:format": "syncpack format",
        "deps:sync": "syncpack fix-mismatches",
        "deps:view": "syncpack list",
        "deps:sync-list": "syncpack list-mismatches",
        "deps:up": "syncpack update",
        "deps:up:check": "pnpm dlx npm-check-updates -ws --root",
        "deps:up:unsafe": "pnpm dlx npm-check-updates -ws --root -u && pnpm deps:sync"
    },
    "dependencies": {
        "tsx": "^4.7.2"
    },
    "devDependencies": {
        "@repo/auto-import-gen": "workspace:*",
        "@repo/cd-package": "workspace:*",
        "@repo/eslint-config": "workspace:*",
        "@repo/gen-image": "workspace:*",
        "@repo/scripts": "workspace:*",
        "@repo/ts-globals": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@repo/tw-theme": "workspace:*",
        "@repo/tw-theme-cli": "workspace:*",
        "@turbo/gen": "^1.13.2",
        "prettier": "^3.2.5",
        "syncpack": "12.3.0",
        "turbo": "^1.13.2",
        "type-fest": "^4.15.0",
        "typescript": "^5.4.5"
    },
    "packageManager": "pnpm@8.10.2"
}
