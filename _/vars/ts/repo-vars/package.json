{
    "name": "@repo/ts-vars",
    "private": true,
    "type": "module",
    "version": "0.0.0",
    "scripts": {
        "clean": "rm -rf .turbo node_modules dist",
        "lint": "eslint .",
        "typecheck": "tsc --noEmit",
        "prettie:format": "prettier --check \"**/*.{mjs,ts,md,json}\"",
        "with-env": "dotenv -e .env -- "
    },
    "exports": {
        "./web": {
            "import": "./src/web/index.ts",
            "require": "./src/web/index.ts",
            "default": "./src/web/index.ts"
        },
        "./dev": {
            "import": "./src/dev/index.ts",
            "require": "./src/dev/index.ts",
            "default": "./src/dev/index.ts"
        }
    },
    "dependencies": {
        "@repo/ts-utils": "workspace:*",
        "zod": "^3.22.4"
    },
    "peerDependencies": {
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/prettier-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@types/node": "^20.12.7",
        "dotenv-cli": "^7.4.1",
        "eslint": "^8.56.0",
        "prettier": "^3.2.5",
        "tsx": "^4.7.2",
        "type-fest": "^4.15.0",
        "typescript": "^5.4.5"
    },
    "eslintConfig": {
        "extends": [
            "@repo/eslint-config/library"
        ]
    },
    "prettier": "@repo/prettier-config"
}
