{
    "name": "@repo/scripts",
    "private": true,
    "type": "module",
    "version": "0.0.0",
    "scripts": {
        "build": "tsup",
        "build:types": "pnpm with-env tsc -p . --emitDeclarationOnly --declaration --noEmit false",
        "build:deps": "tsup",
        "build:packages": "tsup",
        "dev": "tsup -d --watch",
        "dev:deps": "tsup -d --watch",
        "dev:packages": "tsup -d --watch",
        "clean": "rm -rf .turbo node_modules dist",
        "lint": "eslint .",
        "typecheck": "tsc --noEmit",
        "prettier-format": "prettier --check \"**/*.{mjs,ts,md,json}\"",
        "with-env": "dotenv -e .env -- "
    },
    "exports": {
        "./init-repo": {
            "types": "./dist/src/init-repo.d.ts",
            "import": "./dist/src/init-repo.js",
            "require": "./dist/src/init-repo.cjs"
        },
        "./postinstall": {
            "types": "./dist/src/postinstall.d.ts",
            "import": "./dist/src/postinstall.js",
            "require": "./dist/src/postinstall.cjs"
        }
    },
    "dependencies": {
        "@inquirer/core": "^8.0.0",
        "@inquirer/prompts": "^5.0.0",
        "@repo/node-utils": "workspace:*",
        "@repo/ts-utils": "workspace:*",
        "@repo/workspace-utils": "workspace:*",
        "boxen": "^7.1.1",
        "cross-spawn": "^7.0.3",
        "fs-extra": "^11.2.0",
        "fuse.js": "^7.0.0",
        "handlebars": "^4.7.8",
        "yargs": "^17.7.2",
        "zod": "^3.22.4"
    },
    "peerDependencies": {
        "@inquirer/core": "^8.0.0",
        "@inquirer/prompts": "^5.0.0",
        "boxen": "^7.1.1",
        "chalk": "^5.3.0",
        "fs-extra": "^11.2.0",
        "handlebars": "^4.7.8",
        "yargs": "^17.7.2",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/prettier-config": "workspace:*",
        "@repo/tsconfig": "workspace:*",
        "@repo/tsup-config": "workspace:*",
        "@types/cross-spawn": "^6.0.6",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^20.12.7",
        "@types/yargs": "^17.0.32",
        "dotenv-cli": "^7.4.1",
        "eslint": "^8.56.0",
        "prettier": "^3.2.5",
        "tsup": "^8.0.2",
        "tsx": "^4.7.2",
        "type-fest": "^4.15.0",
        "typescript": "^5.4.5"
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "@repo/eslint-config/library"
        ]
    },
    "prettier": "@repo/prettier-config"
}
